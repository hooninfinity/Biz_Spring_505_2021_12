	public String fileUp() {
		return "write";
	}
	
	/**
	 * form에서 전달한 파일을 수신할 Controller
	 * 송신 : 보내기, 수신 : 받기
	 */
	@RequestMapping(value = {"/",""}, method = RequestMethod.POST)
	public String fileUp(
			String to_title,
			MultipartFile rev_file) {
		
		return "redirect:/file";
	}
	

}
